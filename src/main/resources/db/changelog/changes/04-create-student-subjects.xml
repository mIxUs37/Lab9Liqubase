<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="4" author="Aben Aitzhan">

        <createTable tableName="student_subjects">
            <column name="student_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_student_subject_student" referencedTableName="students" referencedColumnNames="id"/>
            </column>

            <column name="subject_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_student_subject_subject" referencedTableName="subjects" referencedColumnNames="id"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="student_id, subject_id"
                       constraintName="pk_student_subject"
                       tableName="student_subjects"/>

    </changeSet>

</databaseChangeLog>
