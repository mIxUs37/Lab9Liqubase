<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="3" author="Aben Aitzhan">

        <createTable tableName="grades">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="value" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="student_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_grade_student" referencedTableName="students" referencedColumnNames="id"/>
            </column>

            <column name="subject_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_grade_subject" referencedTableName="subjects" referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
